#include <bits/stdc++.h> 
int smallestSubset(vector < int > arr, int n) 
{
  int sum=0;
  sort(arr.begin(),arr.end());
  for (int i=0;i<n;i++)
  {
	  sum+=arr[i];
  }    
  int ans=0;
  int curSum=0;
  for (int i=n-1;i>=0;i--)
  {
     ans++;
	 curSum+=arr[i];
	 if (curSum>sum/2) return ans;
  }
  return ans;
}


